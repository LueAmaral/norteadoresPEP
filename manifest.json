{
    "manifest_version": 3,
    "name": "Máscaras de Atendimento",
    "version": "1.0",
    "description": "Cole rapidamente máscaras de atendimento via atalho ou botão.",
    "action": {
        "default_title": "Máscaras de Atendimento"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "abrir-snippets": {
            "suggested_key": {
                "default": "Ctrl+Q",
                "mac": "Command+Q"
            },
            "description": "Abrir o menu de seleção de snippets"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}